{
  "compilerOptions": {
    "target": "es2022",
    "useDefineForClassFields": true,
    "module": "es2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2022", "dom"],
    "outDir": "../../protocol",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../src/*"],
      "#/*": ["../../types/*"]
    }
  },
  "include": ["*.ts"]
}
