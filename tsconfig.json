{
  "compilerOptions": {
    "target": "es2022",
    "useDefineForClassFields": true,
    "module": "es2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2022", "dom"],
    "outDir": "protocol",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"]
    }
  },
  "include": ["protocol_ts/**/*.ts", "types/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
